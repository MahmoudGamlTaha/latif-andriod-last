<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    tools:context=".ui.details.DetailsActivity"    android:padding="16dp"    android:background="@drawable/bottom_curve_bg"    >    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"        android:drawableStart="@drawable/white_ic_loc"        android:text="Cairo"        android:textColor="@color/white"        android:drawablePadding="5dp"        android:visibility="gone"        android:gravity="bottom"        android:layout_marginTop="5dp"        android:fontFamily="@font/poppins_regular"/>    <ImageView        android:layout_width="40dp"        android:layout_height="40dp"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:srcCompat="@drawable/ic_search"        android:padding="5dp"        android:id="@+id/searchBtn"        android:visibility="gone"        />    <TextView        android:layout_width="0dp"        android:layout_height="wrap_content"        app:layout_constraintStart_toEndOf="@id/backBtn"        app:layout_constraintTop_toBottomOf="@id/searchBtn"        app:layout_constraintEnd_toStartOf="@id/searchBtn"        android:text=""        android:gravity="center"        android:textColor="@color/white"        android:fontFamily="@font/poppins_bold"        android:textSize="20sp"        android:lines="1"        android:layout_marginTop="8dp"        android:id="@+id/title"/>    <ImageView        android:layout_width="40dp"        android:layout_height="40dp"        app:layout_constraintTop_toTopOf="@id/title"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintBottom_toBottomOf="@id/title"        app:srcCompat="@drawable/ic_back_white"        android:scaleType="centerInside"        android:id="@+id/backBtn"/></androidx.constraintlayout.widget.ConstraintLayout>