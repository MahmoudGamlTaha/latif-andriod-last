<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.profile.ProfileActivity">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="@string/profile"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/editBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_edit" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:gravity="center"
        android:id="@+id/banner"
        android:layout_below="@id/toolbar"
        android:background="@drawable/bottom_curve_bg">
    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_profile"
        />
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@id/banner"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:text="@string/name"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sara Ahmed"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toTopOf="@id/name"
                app:layout_constraintBottom_toBottomOf="@id/name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/name"
                app:layout_constraintHorizontal_bias="0.2"
                android:id="@+id/nameValue"
                 />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintStart_toStartOf="@id/name"
                android:background="@color/hinttxt"
                android:layout_marginTop="12dp"
                android:id="@+id/line1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/birthday"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toBottomOf="@id/line1"
                app:layout_constraintStart_toStartOf="@id/name"
                android:id="@+id/birthday"
                android:layout_marginTop="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26-4-1993"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toTopOf="@id/birthday"
                app:layout_constraintBottom_toBottomOf="@id/birthday"
                app:layout_constraintEnd_toEndOf="@id/nameValue"
                app:layout_constraintStart_toStartOf="@id/nameValue"
                app:layout_constraintHorizontal_bias="0"
                android:id="@+id/birthdayValue"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/birthday"
                app:layout_constraintStart_toStartOf="@id/name"
                android:background="@color/hinttxt"
                android:layout_marginTop="12dp"
                android:id="@+id/line2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gender"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toBottomOf="@id/line2"
                app:layout_constraintStart_toStartOf="@id/name"
                android:id="@+id/gender"
                android:layout_marginTop="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toTopOf="@id/gender"
                app:layout_constraintBottom_toBottomOf="@id/gender"
                app:layout_constraintEnd_toEndOf="@id/nameValue"
                app:layout_constraintStart_toStartOf="@id/nameValue"
                app:layout_constraintHorizontal_bias="0"
                android:id="@+id/genderValue"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/gender"
                app:layout_constraintStart_toStartOf="@id/name"
                android:background="@color/hinttxt"
                android:layout_marginTop="12dp"
                android:id="@+id/line3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toBottomOf="@id/line3"
                app:layout_constraintStart_toStartOf="@id/name"
                android:id="@+id/email"
                android:layout_marginTop="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sara@gmail.com"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toTopOf="@id/email"
                app:layout_constraintBottom_toBottomOf="@id/email"
                app:layout_constraintEnd_toEndOf="@id/nameValue"
                app:layout_constraintStart_toStartOf="@id/nameValue"
                app:layout_constraintHorizontal_bias="0"
                android:id="@+id/emailValue"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/email"
                app:layout_constraintStart_toStartOf="@id/name"
                android:background="@color/hinttxt"
                android:layout_marginTop="12dp"
                android:id="@+id/line4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toBottomOf="@id/line4"
                app:layout_constraintStart_toStartOf="@id/name"
                android:id="@+id/phone"
                android:layout_marginTop="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="002222222"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toTopOf="@id/phone"
                app:layout_constraintBottom_toBottomOf="@id/phone"
                app:layout_constraintEnd_toEndOf="@id/nameValue"
                app:layout_constraintStart_toStartOf="@id/nameValue"
                app:layout_constraintHorizontal_bias="0"
                android:id="@+id/phoneValue"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/phone"
                app:layout_constraintStart_toStartOf="@id/name"
                android:background="@color/hinttxt"
                android:layout_marginTop="12dp"
                android:id="@+id/line5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toBottomOf="@id/line5"
                app:layout_constraintStart_toStartOf="@id/name"
                android:id="@+id/address"
                android:layout_marginTop="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sks sksn s ksnssnsn sksks"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toTopOf="@id/address"
                app:layout_constraintBottom_toBottomOf="@id/address"
                app:layout_constraintEnd_toEndOf="@id/nameValue"
                app:layout_constraintStart_toStartOf="@id/nameValue"
                app:layout_constraintHorizontal_bias="0"
                android:id="@+id/addressValue"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/address"
                app:layout_constraintStart_toStartOf="@id/name"
                android:background="@color/hinttxt"
                android:layout_marginTop="12dp"
                android:id="@+id/line6"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/myAds"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toBottomOf="@id/line6"
                app:layout_constraintStart_toStartOf="@id/name"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/myAds"
                android:textColor="@color/black"
                android:layout_marginTop="12dp"
                android:drawableEnd="@drawable/ic_arrow"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/myAds"
                app:layout_constraintStart_toStartOf="@id/name"
                android:background="@color/hinttxt"
                android:layout_marginTop="12dp"
                android:id="@+id/line7"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/language"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toBottomOf="@id/line7"
                app:layout_constraintStart_toStartOf="@id/name"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/language"
                android:textColor="@color/black"
                android:layout_marginTop="12dp"
                android:drawableEnd="@drawable/ic_arrow"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>